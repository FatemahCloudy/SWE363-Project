{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./attached_assets/*"]
    },
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["client/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
